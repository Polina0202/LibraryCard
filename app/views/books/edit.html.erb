<div class="container">
  <div id="form">
    <%= form_for @book, as: :book, url: book_path(@book), method: :patch do |form|%>
      <%= render 'form', f: form %>
      <div class="form-button">
        <%= link_to "Вернуться к списку", books_path %>
        <%= form.submit "Изменить" %>
      </div>
    <% end %>
  </div>
</div>
