<div class="button-right">
  <%= link_to 'Добавить автора', new_author_path %>
</div>
<div class="table">
  <table>
    <thead>
      <tr>
        <td>Имя</td>
        <td>Фамилия</td>
        <td>Пол</td>
        <td>Статус</td>
        <td>Информация</td>
        <td>Книги</td>
        <td>Действия</td>
      </tr>
    </thead>
    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td><%= link_to author.first_name, edit_author_path(author.id) %></td>
          <td><%= author.last_name %></td>
          <td><%= t("enum.gender.#{author.gender}") %></td>
          <td><%= active_str(author.active) %></td>
          <td><%= author.description %></td>
          <td><%= list_books(author).html_safe %></td>
          <td><%= link_to 'Удалить', author_path(author.id), method: :delete, data: {confirm: 'Ты уверен?'} %></td>
          <tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="button_back">
  <a href="articles.html">На главную</a>
</div>
